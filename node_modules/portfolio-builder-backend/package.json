{
  "name": "portfolio-builder-backend",
  "version": "1.0.0",
  "description": "TypeScript backend for portfolio website with resume parsing",
  "main": "dist/server.js",
  "scripts": {
    "start": "node -r ts-node/register src/server.ts",
    "start:ts": "node -r ts-node/register src/server.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npm run build:compile",
    "build:compile": "tsc --build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --passWithNoTests",
    "test:verbose": "jest --verbose --passWithNoTests",
    "lint": "echo 'Linting not configured yet'",
    "prebuild": "npm run test:ci",
    "posttest": "echo 'Tests completed successfully'"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.14.10",
    "@types/pdf-parse": "^1.1.5",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  },
  "keywords": [
    "portfolio",
    "resume",
    "parser",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
