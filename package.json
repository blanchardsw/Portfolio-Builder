{
  "name": "portfolio-builder",
  "version": "1.0.0",
  "description": "Full-stack portfolio builder with resume parsing capabilities",
  "private": true,
  "scripts": {
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd portfolio-backend && npm install",
    "install:frontend": "cd portfolio-frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd portfolio-backend && npm run dev",
    "dev:frontend": "cd portfolio-frontend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd portfolio-backend && npm run test:ci",
    "test:frontend": "cd portfolio-frontend && npm run test:ci",
    "test:watch": "concurrently \"npm run test:watch:backend\" \"npm run test:watch:frontend\"",
    "test:watch:backend": "cd portfolio-backend && npm run test:watch",
    "test:watch:frontend": "cd portfolio-frontend && npm test",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "cd portfolio-backend && npm run test:coverage",
    "test:coverage:frontend": "cd portfolio-frontend && npm run test:coverage",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd portfolio-backend && npm run build",
    "build:frontend": "cd portfolio-frontend && npm run build",
    "build:ci": "npm run test && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd portfolio-backend && npm start",
    "start:frontend": "cd portfolio-frontend && npm start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:backend": "cd portfolio-backend && npm run lint",
    "lint:frontend": "cd portfolio-frontend && npm run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "npm run type-check:backend && npm run type-check:frontend",
    "type-check:backend": "cd portfolio-backend && npx tsc --noEmit",
    "type-check:frontend": "cd portfolio-frontend && npx tsc --noEmit",
    "prepare": "husky install",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd portfolio-backend && rm -rf node_modules dist coverage",
    "clean:frontend": "cd portfolio-frontend && rm -rf node_modules build coverage",
    "audit": "npm run audit:backend && npm run audit:frontend",
    "audit:backend": "cd portfolio-backend && npm audit",
    "audit:frontend": "cd portfolio-frontend && npm audit",
    "prebuild": "npm run test",
    "postinstall": "echo 'Portfolio Builder setup complete! Run npm run dev to start development.'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0"
  },
  "workspaces": [
    "portfolio-backend",
    "portfolio-frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/portfolio-builder.git"
  },
  "keywords": [
    "portfolio",
    "resume",
    "parser",
    "typescript",
    "react",
    "nodejs",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}
